<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
   
    <managed-bean>
    	<managed-bean-name>userBean</managed-bean-name>
    	<managed-bean-class>com.simple.jsf.bean.UserBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <validator>
    	<validator-id>emailValidator</validator-id>
    	<validator-class>com.simple.jsf.validation.EmailValidator</validator-class>
	</validator>
    
    <validator>
    	<validator-id>stringValidator</validator-id>
    	<validator-class>com.simple.jsf.validation.StringValidator</validator-class>
	</validator>
	
    <navigation-rule>
    	<display-name>AddUser</display-name>
    	<from-view-id>/AddUser.jsp</from-view-id>
    	<navigation-case>
    		<from-action>#{userBean.addUser}</from-action>
    		<from-outcome>success</from-outcome>
    		<to-view-id>/ListUser.jsp</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
</faces-config>